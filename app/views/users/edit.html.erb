<h1>Editing User</h1>
<br>
<% form_for  @user, :url => {:controller => "users", :action => "update", :varo => "admin"} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :type %><br />
   	<%= f.radio_button(:utype, "Publisher") %> Publisher
	<%= f.radio_button(:utype, "Advertiser") %> Advertiser
	<%= f.radio_button(:utype, "Admin") %> Admin
  </p>
  <p>
    <%= f.label :archive %><br />
    <%= f.check_box(:archive) %>
  </p>
  <p>
    <%= f.submit "Update"  %>
  </p>
<% end %>
<br>
<%= link_to 'Show', @user %> |
<%= link_to 'Back', :controller => "users", :check => 'no' %>
